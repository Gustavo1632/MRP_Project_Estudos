@model MRP.Models.Entities.Product

@{
    ViewData["Title"] = "IncreaseStock";
}

<h1>IncreaseStock</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IncreaseStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
